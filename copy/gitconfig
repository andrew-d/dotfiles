[github]
	user = andrew-d
[user]
	name = Andrew Dunham
	email = andrew@du.nham.ca
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[push]
	default = tracking
[core]
	whitespace = trailing-space,space-before-tab
[diff]
	renames = copies
	mnemonicprefix = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	stat = status -sb
	head = log -n1
	fix = commit --amend -C HEAD
	cdiff = diff --cached
	lsb = "!git for-each-ref --format='%(refname:short)' --sort=-authordate refs/heads/ | while read r; do git log -1 $r --pretty=format:\"%Cgreen%ci %Cblue%cr%Creset %Cred%h%Creset $r %C(bold blue)<%an>%Creset\"; done"
	standup = "!git log --since yesterday --author `git config user.email` --pretty=oneline --abbrev-commit"
	ignored = ls-files --others --ignored --exclude-standard
[core]
	editor = /usr/bin/env vim
