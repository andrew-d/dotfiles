# Enable vi-style keybindings
set -o vi

# Make virtualenvwrapper work
if [[ -e /usr/local/bin/virtualenvwrapper.sh ]]; then
  export WORKON_HOME=~/venvs
  mkdir -p $WORKON_HOME
  source /usr/local/bin/virtualenvwrapper.sh
fi

# IP addresses
alias wanip="dig +short myip.opendns.com @resolver1.opendns.com"
alias whois="whois -h whois-servers.net"

# File size
alias fs="stat -f '%z bytes'"
alias df="df -h"

# Check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# Autocorrect typos in path names when using `cd`
shopt -s cdspell

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

# Color for grep.
export GREP_OPTIONS='--color=auto'

# SSH auto-completion based on entries in known_hosts.
if [[ -e ~/.ssh/known_hosts ]]; then
  complete -o default -W "$(cat ~/.ssh/known_hosts | sed 's/[, ].*//' | sort | uniq | grep -v '[0-9]')" ssh scp stfp
fi

# Git auto-completion
source ~/.git-completion.bash

# If it exists, use source-highlight.
if command -v "source-highlight" >/dev/null 2>&1; then
  export LESSOPEN="| /usr/local/bin/src-hilite-lesspipe.sh %s"
  alias less="less -R "
fi

# Helper functions.
if [[ -e ~/.functions ]]; then
  source ~/.functions
fi

# Sexy sexy prompt - stolen from:
# https://github.com/mathiasbynens/dotfiles/blob/master/.bash_prompt
if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
  export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
  export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
  tput sgr0
  if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
    MAGENTA=$(tput setaf 9)
    ORANGE=$(tput setaf 172)
    GREEN=$(tput setaf 190)
    PURPLE=$(tput setaf 141)
    WHITE=$(tput setaf 256)
  else
    MAGENTA=$(tput setaf 5)
    ORANGE=$(tput setaf 4)
    GREEN=$(tput setaf 2)
    PURPLE=$(tput setaf 1)
    WHITE=$(tput setaf 7)
  fi
  BOLD=$(tput bold)
  RESET=$(tput sgr0)
else
  MAGENTA="\033[1;31m"
  ORANGE="\033[1;33m"
  GREEN="\033[1;32m"
  PURPLE="\033[1;35m"
  WHITE="\033[1;37m"
  BOLD=""
  RESET="\033[m"
fi

export MAGENTA
export ORANGE
export GREEN
export PURPLE
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
  [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] && echo "*"
}

function parse_git_branch() {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

PS1="\[${BOLD}${MAGENTA}\]\u \[$WHITE\]at \[$ORANGE\]\h \[$WHITE\]in \[$GREEN\]\w\[$WHITE\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")\[$PURPLE\]\$(parse_git_branch)\[$WHITE\]\n\$ \[$RESET\]"


# Bash history config.
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# Append to the Bash history file, rather than overwriting it
shopt -s histappend

# Make some commands not show up in history
export HISTIGNORE="ls:[bf]g:pwd:exit:date:clear"


# ==================================================
# Deal with platform-specific stuff.

echo "Loading OS-specific settings..."
UNAMESTR=`uname`
if [[ "$UNAMESTR" == "Darwin" ]]; then
    # Mac OS X-specific stuff
    alias lock="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
    alias ls="ls -alGF"

    if [ -f `brew --prefix`/etc/autojump ]; then
        . `brew --prefix`/etc/autojump
    fi
elif [[ "$UNAMESTR" == "Linux" ]]; then
    alias ls="ls -al --color=auto"
fi

# Deal with computer-specific stuff.
if [[ -f ~/.bash.local ]]
then
  echo "Loading computer-specific settings..."
  source ~/.bash.local
fi

# Unset all unneeded variables.
unset UNAMESTR

# If possible, add tab completion for many more commands
[ -f /etc/bash_completion ] && source /etc/bash_completion

